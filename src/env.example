# MongoDB Configuration
# Replace with your MongoDB connection string
VITE_MONGODB_URI=mongodb://localhost:27017
MONGODB_URI=mongodb://localhost:27017

# Database name
VITE_MONGODB_DB_NAME=megajobnepal
MONGODB_DB_NAME=megajobnepal

# Application Configuration
VITE_APP_NAME=MegaJobNepal
NEXT_PUBLIC_APP_NAME=MegaJobNepal

VITE_APP_URL=http://localhost:5173
NEXT_PUBLIC_APP_URL=http://localhost:5173

# Environment
NODE_ENV=development
VITE_NODE_ENV=development

# JWT Configuration (Change in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# File Upload Service Configuration
# Options: 'local' or 'cloudinary'
VITE_UPLOAD_SERVICE=local
UPLOAD_SERVICE=local

# Cloudinary Configuration (Optional - for file uploads)
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Optional - for OTP and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password